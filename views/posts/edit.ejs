<!DOCTYPE html>
<html>

<head>
    <% include ../parts/header %>
</head>

<body>
    <% include ../parts/nav %>
    <div class="container post post-edit">
        <div class="buttons">
            <a class="btn btn-default" href="/posts">Back</a>
        </div>

        <form class="post-form form-horizontal" action="/posts/<%= post._id %>?_method=put" method="post">
            <div class="contentBox">
                <h3 class="contentBoxTop">Edit Post</h3>
                <fieldset>
                    <div class="form-group <%= (errs.title)?'has-error':'' %>">
                        <label for='title' class="col-sm-2 control-label">Title</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="title" name="title" value="<%= post.title%>">
                            <% if(errs.title) {%>
                            <span class='help-block'>
                                <%= errs.title.msg %></span>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group <%= (errs.body)? 'has-error':'' %>">
                        <label for="body" class="col-sm-2 control-label">Body</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="body" name="body" rows="10"><%= post.body %></textarea>
                            <% if(errs.body){ %>
                            <span class="help-block">
                                <%= errs.body.msg %></span>
                            <% } %>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="buttons">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            <% if(errs.unhandled) { %>
            <%= errs.unhandled %>
            <% } %>
        </form>
    </div>
    <% include ../parts/footer %>